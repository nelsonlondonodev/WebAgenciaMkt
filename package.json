{
  "name": "nelson-agencia-web",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "rm -rf dist",
    "copy:html": "cp *.html dist/",
    "copy:images": "cp -r image dist/",
    "copy:assets": "npm run copy:html && npm run copy:images",
    "watch:css": "postcss ./src/input.css -o dist/output.css --watch",
    "build:css": "NODE_ENV=production postcss ./src/input.css -o dist/output.css",
    "build:js": "esbuild script.js --bundle --minify --outfile=dist/bundle.min.js",
    "build": "npm run clean && mkdir dist && npm run copy:assets && npm run build:css && npm run build:js && node cache-buster.js && node generar-sitemap.js",
    "sitemap": "node generar-sitemap.js",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "cssnano": "^7.1.0",
    "esbuild": "^0.23.0",
    "postcss": "^8.5.5",
    "postcss-cli": "^11.0.1",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "sitemap": "^8.0.0",
    "tailwindcss": "^3.4.17"
  }
}
