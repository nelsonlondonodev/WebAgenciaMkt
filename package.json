{
  "name": "nelson-agencia-web",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch:css": "postcss ./src/input.css -o output.css --watch",
    "watch:js": "esbuild src/js/script.js --bundle --outfile=bundle.min.js --watch",
    "dev": "concurrently \"npm run watch:css\" \"npm run watch:js\"",
    "build:css": "NODE_ENV=production postcss ./src/input.css -o output.css",
    "build:js": "esbuild src/js/script.js --bundle --minify --outfile=bundle.min.js",
    "build": "npm run build:css && npm run build:js && node cache-buster.js && node generar-sitemap.js",
    "build:dist": "npm run build && rm -rf dist && mkdir -p dist/image && cp *.html output.css bundle.min.js robots.txt sitemap.xml dist/ && cp image/* dist/image/",
    "sitemap": "node generar-sitemap.js",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "cssnano": "^7.1.0",
    "esbuild": "^0.27.0",
    "onchange": "^7.1.0",
    "postcss": "^8.5.5",
    "postcss-cli": "^11.0.1",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "sitemap": "^8.0.0",
    "tailwindcss": "^3.4.17"
  }
}
